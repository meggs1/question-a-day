<% content_for :header do %>
    <h1>Welcome, <%= @user.name %></h1>
<% end %>

<% content_for :content do %>
    <h3>Your answers</h3>
    <% @user.answers.each do |answer| %>
        <ul>
            <li>Q: <%= link_to answer.question.name, answer_path(answer) %><br>
                A: <%= answer.content %>
            </li>
        </ul>
    <% end %> 
<% end %>
