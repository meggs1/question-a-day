<% if @user.errors.any? %>
  <%= render partial: 'layouts/errors', locals: {object: @user}%>
<% end %>

<%= form_for @user do |f| %>
    <label>Name:</label>
    <%=f.text_field :name %><br>
    <label>Email:</label>
    <%=f.email_field :email %><br>
    <label>Password:</label>
    <%=f.password_field :password %><br>
    <br>
    <%= f.submit "Create User" %>
<%end%>