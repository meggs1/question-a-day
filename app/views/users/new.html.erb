<% content_for :header do %>
  <h1>Sign up</h1>
<%end%>

<% content_for :content do %>
  <%= render partial: 'layouts/errors', locals: {object: @user}%>

  <%= form_for @user do |f| %>
    <div class="form-group">
      <label>Name:</label>
      <%=f.text_field :name, class: "form-control"%><br>
      <label>Email:</label>
      <%=f.email_field :email, class: "form-control"%><br>
      <label>Password:</label>
      <%=f.password_field :password, class: "form-control"%><br>
      <center><%= f.submit "Sign up", class: "btn btn-primary col-3" %></center>
    </div>
  <%end%>
  
  <p>Already have an account? <%= link_to "Log In", login_path %></p>
<%end%>
