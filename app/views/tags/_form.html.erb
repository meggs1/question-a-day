<% if @tag.errors.any? %>
  <%= render partial: 'layouts/errors', locals: {object: @tag}%>
<% end %>
  
<%= form_for @tag do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %><br>

    <%= f.submit class: "btn btn-primary col-3"%>
  </div>
<% end %>