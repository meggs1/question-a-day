<h1><%= @question.name %></h1>
<label> Tags: </label>
<% @question.tags.each do |tag| %>
    <%= link_to "#{tag.name}", tag_path(tag) %>
<%end%><br>

<% if @user_answer %>
    <p>You have already answered this question, you wrote: </p>
    <%= "#{@user_answer.content}" %><br>
    <%= link_to "Change Answer", edit_answer_path(@user_answer) %>

<%else%>
    <%= link_to "Answer todays question", new_question_answer_path(@question)%>
<%end%>
<br>

<%= link_to 'All Answers', question_answers_path(@question) %><br>

<% if current_user.admin %>
    <%= link_to "Edit Question", edit_question_path(@question) %>
<%end%>
