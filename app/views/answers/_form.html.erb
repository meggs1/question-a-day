<%= render partial: "layouts/errors", locals: {object: answer} %>

<%= form_for answer do |f| %>
    <div class="form-group">
        <%= f.hidden_field :user_id %><br>
        <%= f.hidden_field :question_id %><br>
        <%= f.label "Your Answer:" %><br>
        <%= f.text_area :content, class:"form-control" %><br>
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>