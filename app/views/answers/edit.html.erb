<h1>Edit Answer Form</h1>

<%= form_for @answer do |f| %>
    <%= f.hidden_field :user_id %><br />
    <%= f.hidden_field :question_id %><br />
    <%= f.label "Your Answer:" %>
    <%= f.text_field :content %><br />
    <%= f.submit "Answer Question" %>
<% end %>

<%= link_to "Back to Answers", answers_path %>